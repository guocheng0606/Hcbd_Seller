<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#eeeeee"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:elevation="4dp"
        android:background="@color/white">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back_black"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/txt_setting_1"
            android:textSize="17sp"
            android:textColor="@color/text_color"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_back"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#bbbbbb"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                android:background="@color/white"
                android:paddingLeft="12dp"
                android:paddingRight="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="旧密码"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/met_old_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入旧密码"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:inputType="textPassword"
                    app:met_underlineColor="@color/tab_bar_color"
                    app:met_primaryColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新密码"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/met_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请输入新密码"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:inputType="textPassword"
                    app:met_underlineColor="@color/tab_bar_color"
                    app:met_primaryColor="@color/colorAccent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认密码"
                    android:textSize="13sp"
                    android:textColor="#888888"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/met_re_new_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="请再次输入新密码"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:inputType="textPassword"
                    app:met_underlineColor="@color/tab_bar_color"
                    app:met_primaryColor="@color/colorAccent"
                    android:layout_marginBottom="15dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="#bbbbbb"/>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="完成"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="@drawable/shape_login_button_bg"
                android:layout_margin="25dp"/>
        </LinearLayout>
    </ScrollView>




</LinearLayout>
